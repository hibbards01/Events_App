<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0000FF</item>
        <item name="android:titleTextStyle">@style/TitleTheme</item>
    </style>

    <!-- Title Size -->
    <style name="TitleTheme"
        parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Tab Theme -->
    <style name="TabTextStyle" parent="android:style/Widget.TabWidget">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">fill_horizontal</item>
    </style>

    <!-- Tab Text Style -->
    <style name = "TabTheme" parent="@style/TabTextStyle">
        <item name="android:background">@color/blue</item>
    </style>

</resources>
